    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@pinia/testing": "^0.1.7",
    "@playwright/test": "^1.58.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vitest/coverage-v8": "^4.0.18",
